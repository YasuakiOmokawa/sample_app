<%= include_gon %>
<% set_title(full_title("設定")) %>
<div class="alert alert-danger hide" id="content-active-error-message">
  入力にエラーがあります
  <div id="errors"><ul/></div>
</div>
<div class="setting"><h2>期間設定</h2></div>
<div id="calender">
  <div id="date-range">
    <div id="date-range-field" style="border-bottom-left-radius: 5px; border-bottom-right-radius: 5px;">
      <span></span>
      <a href="#" style="border-bottom-right-radius: 5px;">▼</a>
    </div>
  </div>
</div>
<br>
<div class="setting"><h2>CV設定</h2></div>
<%= form_for(@content, :url =>{:controller => 'contents', :action => 'create'}, html: {:name => 'uploadForm'}) do |f| %>
<input type="text" name="content[date]" class="hide" />
<input type="text" name="content[cv_num]" class="hide" />
<ul id="cv">
  <% @ga_goals.each do |name, number| %>
    <li><a href="javascript:void(0)" data-cv_num=<%= number %>>選択</a><%= name %></li>
  <% end %>
  <%= f.file_field :upload_file, class: "hide" %>
  <li><a href="javascript:void(0)" data-cv_num="file">選択</a><input type="text" id="file"><input id="file-field-button" type="button" value="参照"></li>
</ul>
<div id="btn">
  <a id="submit" href="javascript:void(0)">設定</a>
  <%= link_to 'キャンセル', "javascript:history.back(-1);", data: { push: "true" }, id: "cancell" %>
  <br class="clear">
</div>
<% end %>
