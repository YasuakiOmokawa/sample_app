            renderer: jQuery . jqplot . CategoryAxisRenderer,
            rendererOptions: {
                borderWidth: 1,
            },
            tickOptions: {
              showGridline: false
            }
        },
        x2axis: {
            renderer: jQuery . jqplot . CategoryAxisRenderer,
            tickOptions: {
              showGridline: false
            }
        },
        yaxis: {
            autoscale: true,
            // ticks: ,
            // renderer: jQuery . jqplot . DateAxisRenderer,
            numberTicks: 5,
