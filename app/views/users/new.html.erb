<% provide(:title, 'ユーザ登録') %>
<h1>ユーザ登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, '名前' %>
      <%= f.text_field :name %>

      <%= f.label :email, 'Google Analytics アカウントのメールアドレス' %>
      <%= f.text_field :email %>

      <%= f.label :password, 'Google Analytics アカウントのパスワード' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワードを再度入力" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "アカウントを作成する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
